{% extends 'base.html.twig' %}

{% block title %}Hello AddAddressController!{% endblock %}

{% block body %}
    <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Add Address</h3>
                            </div>
                            <div class="content">
                                {{ form_start(addressForm) }}
                                    <div class="form-group">
                                        {{ form_row(addressForm.fullName) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(addressForm.phone) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(addressForm.address) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(addressForm.complement) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(addressForm.company) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(addressForm.city) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(addressForm.zipCode) }}
                                    </div>
                                    <div class="form-group">
                                        {{ form_row(addressForm.country) }}
                                    </div>

                                    <button type="submit" class="btn btn-fill-out btn-block">Submit</button>
                                {{ form_end(addressForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
